<Window x:Class="FaceMorph.ViewsAndControllers.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceMorph.ViewsAndControllers"
        mc:Ignorable="d"
        Title="PreviewWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <!--<Image Uid="{Binding Id}" Source="{Binding ImageData}" Width="200"/>-->
                <Image Width="200" Height="250" x:Name="currImage" Source="{Binding CurrImage}"/>
                <Label Content="Current Image" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </StackPanel>
            <StackPanel>
                <Image Width="200" Height="250" x:Name="morphImage" Source="{Binding Morph}"/>
                <Label Content="Morphed Image" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </StackPanel>
            <StackPanel>
                <Image Width="200" Height="250" x:Name="nextImage" Source="{Binding NextImage}"/>
                <Label Content="Next Image" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <StackPanel>
                <Label VerticalAlignment="Center" Content="Number of faces found: "></Label>
                <Label x:Name="facesCountCurr" Content=""></Label>
            </StackPanel>
            <Button FontFamily="Marlett" FontSize="20" Content="3" Width="50" Height="50" Click="ChangeFaceLeftButton_Click"/>
            <Button Width="50" Height="50" Click="DisplayFaceClicked">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Display Face"/>
            </Button>
            <Button FontFamily="Marlett" FontSize="20" Content="4" Width="50" Height="50" Click="ChangeFaceRightButton_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button FontFamily="Marlett" FontSize="20" Content="3" Width="50" Height="50" Click="ChangeFaceLeftButton_Click"/>
            <Button Width="50" Height="50" Click="DisplayFaceClicked">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Display Face"/>
            </Button>
            <Button FontFamily="Marlett" FontSize="20" Content="4" Width="50" Height="50" Click="ChangeFaceRightButton_Click"/>
            <StackPanel>
                <Label VerticalAlignment="Center" Content="Number of faces found: "></Label>
                <Label x:Name="facesCountRight" Content=""></Label>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Width="80" Height="25" Content="Morph" Margin="10,0,10,0" Click="MorphButton_Click"/>
            <Slider Width="120" Margin="10,10,10,10"/>
        </StackPanel>
        

    </Grid>
</Window>
